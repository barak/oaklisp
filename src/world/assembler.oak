;;; List all the instructions with certain attributes.

(define (instructions-with attributes)
  (iterate aux ((l (list-type opcode-notation-hash-table))
		(yes '()))
    (cond ((null? l) yes)
	  ((subset? attributes (cdr (car l)))
	   (aux (cdr l) (cons (caar l) yes)))
	  (else (aux (cdr l) yes)))))


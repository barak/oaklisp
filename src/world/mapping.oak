;;; List manipulation

(add-method (reverse (list-type) self)
  (iterate aux ((new '()) (old self))
    (if (null? old) new
	(aux (cons (car old) new) (cdr old)))))

(add-method (reverse! (list-type) self)
  (iterate aux ((old self)
		(new nil))
    (cond (old (let ((o (cdr old)))
		 (set! (cdr old) new)
		 (aux o old)))
	  (else new))))



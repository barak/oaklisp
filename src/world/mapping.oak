;;;
;;; This is used by the thing that remaps the ivar references in
;;; code blocks:

(define (position-in-list x l)
  (iterate aux ((l l) (i 0))
    (cond ((null? l) nil)
	  ((eq? x (car l)) i)
	  (else (aux (cdr l) (+ i 1))))))


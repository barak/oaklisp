(set! (character 'lf) 10)		; ASCII name
(set! (character 'vt) 11)
(set! (character 'np) 12)		; Weird name
(set! (character 'ff) 12)		; ASCII name
(set! (character 'cr) 13)
(set! (character 'so) 14)
(set! (character 'si) 15)
